<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="10dp"
        >
        <ImageView
            android:id="@+id/iv_item_search"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@color/material_grey_900"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_item_search_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/cv_item_image"
        app:layout_constraintEnd_toEndOf="@id/cv_item_image"
        app:layout_constraintTop_toBottomOf="@id/cv_item_image"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.1"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:text="@string/text_originalmix"
        />

    <TextView
        android:id="@+id/tv_item_search_creator"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/cv_item_image"
        app:layout_constraintEnd_toEndOf="@id/cv_item_image"
        app:layout_constraintTop_toBottomOf="@id/tv_item_search_name"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.1"
        android:textSize="12sp"
        android:textColor="@color/material_blue_grey_100"
        android:text="@string/text_originalmix"
        />

    <TextView
        android:id="@+id/tv_item_search_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/cv_item_image"
        app:layout_constraintEnd_toEndOf="@id/cv_item_image"
        app:layout_constraintTop_toBottomOf="@id/tv_item_search_creator"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.1"
        android:textSize="12sp"
        android:textColor="@color/material_blue_grey_100"
        android:text="@string/text_originalmix"
        />

</androidx.constraintlayout.widget.ConstraintLayout>